# Server Configuration
PORT=5000

# Security Configuration

# Body size limits (in bytes or use mb suffix like '2mb')
MAX_BODY_SIZE=2mb
MAX_FILE_SIZE=2097152  # 2MB in bytes
MAX_CONTENT_SIZE=2097152  # 2MB in bytes

# Rate Limiting Configuration

# General API rate limiting (applies to all /api/* routes)
GENERAL_RATE_LIMIT_WINDOW_MS=60000  # 1 minute
GENERAL_RATE_LIMIT_MAX_REQUESTS=100  # 100 requests per window

# PDF Conversion rate limiting (applies to /api/convert)
RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=10  # 10 conversions per window per IP

# Optional: API key for bypassing rate limits (for trusted clients)
# ADMIN_API_KEY=your-secret-api-key-here

# Database Configuration
# DATABASE_URL=postgresql://user:password@host:port/database
